{
  "name": "web-components-starter",
  "version": "0.0.0",
  "private": true,
  "description": "A starter template for building a web component with TypeScript and Lit",
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "type": "module",
  "main": "hello-world.js",
  "module": "hello-world.js",
  "types": "hello-world.d.ts",
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist",
    "analyze:watch": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist --watch",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:lit-analyzer": "lit-analyzer",
    "quality": "npm run format:check && npm run lint && npm run type-check && npm run test",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "web-test-runner",
    "test:dev:watch": "web-test-runner --watch",
    "test:prod": "MODE=prod web-test-runner",
    "test:prod:watch": "MODE=prod web-test-runner --watch",
    "type-check": "tsc --project tsconfig.quality.json",
    "postinstall": "lefthook install",
    "prepublishOnly": "npm run quality && npm run clean && npm run build && npm run analyze"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.2",
    "@eslint/js": "^8.56.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/web-components": "^7.6.17",
    "@storybook/web-components-vite": "^7.6.17",
    "@types/eslint": "^8.56.2",
    "@types/mocha": "^10.0.6",
    "@web/dev-server": "^0.4.2",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^14.0.0",
    "lefthook": "^1.6.1",
    "lit-analyzer": "^2.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "storybook": "^7.6.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.2"
  },
  "customElements": "dist/custom-elements.json"
}
