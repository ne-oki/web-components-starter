{
  "name": "web-components-starter",
  "version": "0.0.0",
  "private": true,
  "description": "A starter template for building a web component with TypeScript and Lit",
  "keywords": ["web-components", "lit-element", "typescript", "lit"],
  "type": "module",
  "main": "hello-world.js",
  "module": "hello-world.js",
  "types": "hello-world.d.ts",
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist",
    "analyze:watch": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist --watch",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "format": "biome format .",
    "lint": "npm run lint:lit-analyzer && npm run lint:biome",
    "lint:biome": "biome lint .",
    "lint:lit-analyzer": "lit-analyzer",
    "static:apply": "biome check --apply .",
    "static:check": "biome check .",
    "static:ci": "biome ci .",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "web-test-runner",
    "test:dev:watch": "web-test-runner --watch",
    "test:prod": "MODE=prod web-test-runner",
    "test:prod:watch": "MODE=prod web-test-runner --watch",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@custom-elements-manifest/analyzer": "^0.9.2",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@web/dev-server": "^0.4.2",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.0",
    "lefthook": "^1.6.1",
    "lit-analyzer": "^2.0.3",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "customElements": "dist/custom-elements.json"
}
