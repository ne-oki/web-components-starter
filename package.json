{
  "name": "web-components-starter",
  "version": "0.0.0",
  "private": true,
  "description": "A starter template for building a web component with TypeScript and Lit",
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "type": "module",
  "main": "dist/hello-world.js",
  "module": "dist/hello-world.js",
  "types": "dist/hello-world.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist",
    "analyze:watch": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist --watch",
    "build": "npm run compile && npm run analyze",
    "clean": "rimraf dist",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint --fix .",
    "lint:lit-analyzer": "lit-analyzer",
    "quality": "npm run format:check && npm run lint && npm run type-check && npm run test",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "tsc --project tsconfig.quality.json",
    "prepare": "lefthook install",
    "prepublishOnly": "npm run quality && npm run clean && npm run build && npm run analyze"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.24",
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@storybook/addon-essentials": "^8.0.2",
    "@storybook/addon-links": "^8.0.2",
    "@storybook/blocks": "^8.0.2",
    "@storybook/test": "^8.0.2",
    "@storybook/web-components": "^8.0.2",
    "@storybook/web-components-vite": "^8.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^24.0.0",
    "lefthook": "^1.6.1",
    "lit-analyzer": "^2.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.0.0",
    "rimraf": "^6.0.1",
    "storybook": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5"
  },
  "customElements": "dist/custom-elements.json"
}
